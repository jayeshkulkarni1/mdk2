<core:FragmentDefinition
	xmlns="sap.ui.comp.valuehelpdialog"
	xmlns:m="sap.m"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:core="sap.ui.core">
	<ValueHelpDialog
		title="{i18n>shipToProtocol}"
		ok=".onValueHelpOkPressShipTo"
		cancel=".onValueHelpCancelPress"
		supportRanges="false" supportMultiselect="true" 
		key="ShipTo" descriptionKey="Name" 
		>
		<filterBar>
			<fb:FilterBar advancedMode="true" filterBarExpanded="true" useToolbar="false"  search=".onFilterBarSearch" isRunningInValueHelpDialog="true">
				<fb:filterGroupItems>
					<fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="ShipTo"
						label="{i18n>shipTo}"
						visibleInFilterBar="true" >
						<fb:control>
							<m:Input name="ShipTo" />
						</fb:control>
					</fb:FilterGroupItem>
                    <fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="Name"
						label="{i18n>name}"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="Name" />
						</fb:control>
					</fb:FilterGroupItem>
                      <fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="City"
						label="{i18n>city}"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="City" />
						</fb:control>
					</fb:FilterGroupItem>
                      <fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="PostalCode"
						label="{i18n>postCode}"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="PostalCode" />
						</fb:control>
					</fb:FilterGroupItem>
                       <fb:FilterGroupItem
						groupName="__$INTERNAL$"
						name="SearchTerm"
						label="{i18n>searchterm}"
						visibleInFilterBar="true">
						<fb:control>
							<m:Input name="SearchTerm" />
						</fb:control>
					</fb:FilterGroupItem>
				</fb:filterGroupItems>
			</fb:FilterBar>
		</filterBar>
	</ValueHelpDialog>
</core:FragmentDefinition>
