<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:mvc="sap.ui.core.mvc" xmlns:sap.ui.fl="sap.ui.fl"
	xmlns:core="sap.ui.core">
	<Dialog
		id="mainDialog"
		title="{i18n>uCallForPrice}" contentWidth="950px" contentHeight="420px">
		<content>
		<Table
					 sap.ui.fl:flexibility="sap/m/flexibility/EngineFlex"
					inset="false" autoPopinMode="true" growing="true" growingThreshold="15" fixedLayout="false"
					items="{
						path: 'callForPriceDialogModel>/'
					}" 
				>
				<columns>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="{i18n>salesOrder}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" >
							<Text text="{i18n>salesOrderItem}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" >
							<Text text="{i18n>callByDate}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" >
							<Text text="{i18n>sfdcPrice}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" >
							<Text text="{i18n>finalPrice}"/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true" >
							<Text text="{i18n>status}"/>
						</Column>
						</columns>
						<items>
						<ColumnListItem vAlign="Middle">
							<cells>
							
								<Text text="{callForPriceDialogModel>Orderid}" />
								<Text text="{callForPriceDialogModel>Orderitem}" />
								<DatePicker value="{callForPriceDialogModel>FPDpricedbydate}" editable="false"  minDate="{callForPriceDialogModel>minDate}" valueFormat="yyyy-MM-dd" displayFormat="dd.MM.yyyy"/>
								<Text text="{callForPriceDialogModel>Finalprice_PriceFX}" />
									<Input value="{callForPriceDialogModel>FinalPrice}" editable="{= ${callForPriceDialogModel>Message} === 'Error' ? false : true}" />
									<Text text="{callForPriceDialogModel>Message}" />
									
									</cells>
									</ColumnListItem>
									</items>
				</Table>
			
